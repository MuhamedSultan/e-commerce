<!-- res/drawable/rectangle_stroke.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@android:color/white"/> <!-- Background color -->
    <stroke
        android:width="2dp"
        android:color="@color/black"/> <!-- Stroke color and width -->
    <corners android:radius="4dp"/> <!-- Optional: for rounded corners -->
</shape>
